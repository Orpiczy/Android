<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:topRightRadius="15dp"
        android:bottomRightRadius="15dp"
        android:radius="5dp"/>

    <gradient
        android:angle="45"
        android:centerX="50%"
        android:centerY="50%"
        android:endColor="#717872"
        android:gradientRadius="20dp"
        android:startColor="#16E4EA"
        android:type="linear" />

    <!--If your shape requires only one solid color-->
    <!--<solid
        android:color="#FFFFFF" />-->

    <size
        android:width="200dp"
        android:height="50dp" />

    <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
    to add dashes to your stroke-->
<!--    <stroke-->
<!--        android:width="0.1dp"-->
<!--        android:color="#000000" />-->

    <!--If you want to add padding-->

    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

</shape>